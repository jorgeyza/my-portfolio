---
import GithubIcon from "~/assets/icons/github-icon.astro";
import LinkedinIcon from "~/assets/icons/linkedin-icon.astro";

import SideElement from "~/components/SideElement/index.astro";

import { GITHUB, LINKEDIN } from "~/configuration";
---

<SideElement orientation="left">
  <ul class="flex flex-col gap-y-5">
    <li
      class="w-6 text-slate-300 transition-all duration-300 hover:-translate-y-1 hover:text-cyan-200"
    >
      <a href={GITHUB}><GithubIcon /></a>
    </li>
    <li
      class="w-6 text-slate-300 transition-all duration-300 hover:-translate-y-1 hover:text-cyan-200"
    >
      <a href={LINKEDIN}><LinkedinIcon /></a>
    </li>
  </ul>
</SideElement>
