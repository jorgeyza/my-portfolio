---
import GithubSVG from "~/assets/icons/github-icon.astro";
import LinkSVG from "~/assets/icons/external-link-icon.astro";

interface Props {
  title: string;
  description: string;
  tags: string[];
  links: {
    github: string;
    site: string;
  };
}

const { title, description, tags, links } = Astro.props;
---

<div
  class="flex aspect-square flex-col rounded-2xl border border-solid border-slate-50 bg-indigo-800 p-3"
>
  <h3 class="font-[Raleway] text-lg font-bold">{title}</h3>
  <p class="mt-2 text-sm">{description}</p>
  <div class="mt-3 flex flex-wrap gap-x-1 gap-y-2">
    {
      tags.map((tag) => (
        <span class="rounded bg-slate-50 p-1 font-[Raleway] text-xs font-bold text-slate-900">
          {tag}
        </span>
      ))
    }
  </div>
  <div class="mt-3 flex justify-end gap-x-3">
    <a class="hover:text-cyan-300" href={links.github} target="_blank">
      <GithubSVG />
    </a>
    <a class="hover:text-cyan-300" href={links.site} target="_blank">
      <LinkSVG />
    </a>
  </div>
</div>
