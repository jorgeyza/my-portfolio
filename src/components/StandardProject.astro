---
import GithubIcon from "~/assets/icons/github-icon.astro";
import LinkIcon from "~/assets/icons/external-link-icon.astro";

interface Props {
  title: string;
  description: string;
  tags: string[];
  links: {
    github: string;
    site: string;
  };
}

const { title, description, tags, links } = Astro.props;
---

<article
  class="flex aspect-square h-full max-w-[280px] flex-col rounded-2xl border border-solid border-slate-50 bg-indigo-700 p-3"
>
  <h3 class="font-[Raleway] text-lg font-bold lg:text-xl">{title}</h3>
  <p class="mt-2 text-sm lg:text-base">{description}</p>
  <div class="mt-3 flex flex-wrap gap-x-1 gap-y-2 md:gap-2">
    {
      tags.map((tag) => (
        <span class="rounded bg-slate-50 p-1 font-[Raleway] text-xs font-bold text-slate-900 md:text-sm">
          {tag}
        </span>
      ))
    }
  </div>
  <div class="mt-3 flex flex-grow flex-col">
    <div class="h-full w-full"></div>
    <div class="flex justify-end gap-x-4">
      <a
        class="w-6 transition-all hover:scale-110 hover:text-cyan-200 lg:w-7"
        href={links.github}
        target="_blank"
      >
        <GithubIcon />
      </a>
      <a
        class="w-6 transition-all hover:scale-110 hover:text-cyan-200 lg:w-7"
        href={links.site}
        target="_blank"
      >
        <LinkIcon />
      </a>
    </div>
  </div>
</article>
