---
import DocumentIcon from "~/assets/icons/document-icon.astro";
import MailIcon from "~/assets/icons/mail-icon.astro";
import JLetter from "~/assets/j-letter.astro";

import { buttonVariants } from "~/components/ui/button";

import { EMAIL } from "~/configuration";
---

<section id="home" class="mt-5 flex md:gap-x-10 xl:gap-x-20">
  <div
    class="flex flex-col lg:shrink-0 lg:justify-center lg:[height:calc(100vh-80px-20px)] xl:basis-1/3"
    data-test="left-home"
  >
    <div class="flex flex-col gap-y-1 font-[Raleway]">
      <p
        class="text-2xl font-bold animate-in fade-in slide-in-from-bottom duration-1000 md:text-5xl"
      >
        Hi
      </p>
      <p
        class="text-2xl font-bold animate-in fade-in slide-in-from-bottom duration-1000 md:text-5xl"
      >
        Iâ€™m Jorge,
      </p>
      <p
        class="text-2xl font-bold animate-in fade-in slide-in-from-bottom duration-1000 md:text-5xl"
      >
        Web Developer
      </p>
    </div>
    <p class="mt-2 text-lg text-purple-300 animate-in fade-in slide-in-from-bottom duration-1000">
      Full Stack Developer / I love creating and learning ðŸŽ“
    </p>
    <p
      class="mt-2 max-w-[390px] text-lg text-slate-300 animate-in fade-in slide-in-from-bottom duration-1000"
    >
      I have knowledge across all stages of web development. I enjoy building (and occaswionally
      designing) alongside other engineers and developers to deliver exceptional digital
      experiences.
    </p>
    <div class="mt-6 flex gap-x-2">
      <a
        class={buttonVariants({
          variant: "secondary",
          className: "font-bold animate-in fade-in slide-in-from-bottom duration-300",
        })}
        style="animation-duration: 1000ms;"
        href="/resume.pdf"
        target="_blank"
        rel="noopener"><DocumentIcon />Resume</a
      >
      <a
        class={buttonVariants({
          variant: "outline",
          className:
            "border-secondary font-bold animate-in fade-in slide-in-from-bottom duration-300 hidden sm:inline-flex",
        })}
        style="animation-duration: 1000ms;"
        href={`mailto:${EMAIL}`}
        target="_blank"
        rel="noopener"><MailIcon />Say hi!</a
      >
    </div>
  </div>
  <div
    class="hidden items-center animate-in fade-in slide-in-from-right-1/3 duration-1000 md:flex"
    data-test="right-home"
  >
    <JLetter />
  </div>
</section>
