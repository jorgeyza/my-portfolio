---
import { Image } from 'astro:assets'

import skills from "~/assets/skills";
---

<section id="skills" class="md:mt-10 lg:mt-20">
  <h2 class="text-center text-2xl font-bold md:text-3xl lg:text-4xl">Skills</h2>
  <div
    class="mt-5 grid grid-cols-[repeat(auto-fill,_80px)] justify-center gap-2 md:mt-10 md:gap-4 lg:grid-cols-[repeat(auto-fill,_100px)] lg:gap-10"
  >
    {
      skills.map((skill) => (
        <div class="flex flex-col items-center gap-y-1 md:gap-y-2">
          <div class="flex h-[80px] w-[80px] items-center justify-center rounded-full bg-slate-50 transition-all hover:scale-110 hover:bg-slate-200 lg:h-[100px] lg:w-[100px]">
            <div class="max-h-[40px] max-w-[40px] lg:max-h-[50px] lg:max-w-[50px]">
              <Image src={skill.src} alt={skill.alt} />
            </div>
          </div>
          <p class="text-sm md:text-lg xl:text-xl">{skill.label}</p>
        </div>
      ))
    }
  </div>
</section>
