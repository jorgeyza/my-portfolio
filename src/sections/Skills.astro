---
import { Image } from "@astrojs/image/components";
import skills from "@/assets/skills";
---

<h2 class="text-center text-2xl">Skills</h2>
<div class="flex flex-wrap">
  {
    skills.map((skill) => (
      <div>
        <div class="h-[60px] w-[60px] rounded-full bg-slate-50">
          <Image src={skill.src} alt={skill.alt} width={skill.width} height={skill.height} />
        </div>
        <p>{skill.label}</p>
      </div>
    ))
  }
</div>
